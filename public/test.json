        "height": 60
      },
      {
        "type": "carousel",
        "id": "featured_carousel",
        "items": [
          {
            "id": "banner_1",
            "imageUrl": "https://via.placeholder.com/400x200?text=배너1",
            "action": {
              "type": "navigate",
              "destination": "detail_screen",
              "params": {
                "itemId": "item_1"
              }
            }
          },
          {
            "id": "banner_2",
            "imageUrl": "https://via.placeholder.com/400x200?text=배너2",
            "action": {
              "type": "navigate",
              "destination": "detail_screen",
              "params": {
                "itemId": "item_2"
              }
            }
          },
          {
            "id": "banner_3",
            "imageUrl": "https://via.placeholder.com/400x200?text=배너3",
            "action": {
              "type": "navigate",
              "destination": "detail_screen",
              "params": {
                "itemId": "item_3"
              }
            }
          }
