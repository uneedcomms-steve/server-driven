          },
          {
            "id": "menu_category",
            "title": "카테고리",
            "iconUrl": "https://via.placeholder.com/24?text=C",
            "action": {
              "type": "navigate",
              "destination": "category_list_screen"
            }
          },
          {
            "id": "menu_cart",
            "title": "장바구니",
            "iconUrl": "https://via.placeholder.com/24?text=B",
            "badgeCount": 2,
            "action": {
              "type": "navigate",
              "destination": "cart_screen"
            }
          },
          {
            "id": "menu_mypage",
            "title": "마이페이지",
            "iconUrl": "https://via.placeholder.com/24?text=M",
            "action": {
              "type": "navigate",
